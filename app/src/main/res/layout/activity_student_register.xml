            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:id="@+id/et_email_studentregistration"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="@color/white"
                    android:id="@+id/et_address_studentregistration"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="@color/white"
                    android:inputType="phone"
                    android:id="@+id/et_phone_studentregistration"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

           <!-- <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="@color/white"
                    android:id="@+id/et_date"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:editable="true"
                    android:hint="Date of birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>-->

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="@color/white"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/et_password_studentregistration"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="@color/white"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/et_repassword_studentregistration"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Confirm Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_signup_studentregistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="38.4dp"
                android:background="@drawable/rect_whitefull2"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:padding="19dp"
                android:text="SIGN UP"
                android:textColor="@color/textcolorblue" />

            <LinearLayout
                android:layout_marginTop="38.4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tv_signin_studentregistration"
                    android:fontFamily="@font/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? Sign In"
                    android:textSize="17.3dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </RelativeLayout>