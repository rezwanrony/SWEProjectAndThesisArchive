<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textColor="@color/textcolorblue"
                android:id="@+id/tv_projectnameallproject"
                android:text="SWE ProjectoThesis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="2dp"
                    android:textSize="10sp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:textColor="@color/textcolorblue"
                    android:id="@+id/tv_projectownernameallproject"
                    android:text="Rezwan Ibnee Mohsin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:textColor="@color/textcolorblue"
                    android:id="@+id/tv_languageallproject"
                    android:text="Java(Android)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>



            <LinearLayout
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="10sp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:textColor="@color/textcolorblue"
                    android:id="@+id/tv_semesterallproject"
                    android:text="Spring 2019"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
