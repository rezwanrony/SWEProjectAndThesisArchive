<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        layout="@layout/top_bartwo"
        />

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/textcolorblue"
                android:text="Enter the code that was sent to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_emailverification"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#FF0000"
                android:text="rezwan35-982@diu.edu.bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

       <EditText
           android:gravity="center"
           android:id="@+id/et_verificationcode"
           android:inputType="number"
           android:backgroundTint="@color/textcolorblue"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_done_verificationcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="38.4dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:padding="19dp"
            android:text="Done"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_resendcodeemailverify"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="Resend code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
